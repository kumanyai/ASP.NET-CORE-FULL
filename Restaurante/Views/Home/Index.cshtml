
@model Restaurante.ViewModels.HomeIndexViewModel

    <html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <title></title>
    </head>
    <body>
        <h1>@Model.CurrentMessage</h1>
        <table>
            @foreach (var restaurant in Model.Restaurants)
            {
                <tr>
                    <td>@restaurant.id</td>
                    <td>@restaurant.Name</td>
                    <td>
                        @*<a href="/home/details/@restaurant.id">Detalles</a>*@
                        @*@Html.ActionLink("MORE", "Details", new { id = restaurant.id})*@
                        <a asp-action="Details" asp-route-id="@restaurant.id">GO</a>
                    </td>
                </tr>
            }
        </table>
        <a asp-action="Create">Agregar restaurante</a>
    </body>
</html>
